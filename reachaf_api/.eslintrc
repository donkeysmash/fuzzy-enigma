{
  "extends": ["eslint:recommended"],
  "plugins": [
    "prettier",
    "babel"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "prettier/prettier": [ "error", { "singleQuote": true } ],
    "no-console": "off"
  }
}